# Aliases

# Sudo
alias stail="sudo tail"
alias irssi='TERM=screen-256color irssi'

# Package managers
alias apt-get='sudo apt-get'
alias aptitude='sudo aptitude'

# Misc
alias rapache="sudo /etc/init.d/apache2 reload"
alias ports="sudo lsof -i -P -sTCP:LISTEN"

# Super user
alias _='sudo'

# Show history
alias history='fc -l 1'

# List direcory contents
alias ls="ls --color=always -h"
alias la='ls -ahf --color=always'
alias lsa='ls -lah --color=always'
alias l='ls -la --color=always'
alias ll='ls -l --color=always'
alias sl='ls -h --color=always' # In case of screw-ups
alias cat='ccat'

# alias for fzf 
alias fzf-ad='ag --nobreak --nonumbers --noheading . | fzf'

# alias for silver searcher (ag)
alias ag='ag --color-path "1;33"'

# wtf
alias fuck='eval $(thefuck $(fc -ln -1 | tail -n 1)); fc -R'

# sshuttle
alias tunnel="sshuttle --dns -vvr xfra-vpn-2 -x 10.0.0.0/8 -x 162.0.0.0/8 -x 192.0.0.0/8 0/0"

function dockerplz ()
{
sudo docker-machine ip dev > /dev/null
if [[ $? == 1 ]]; then
  sudo docker-machine start dev
fi
eval "$(sudo docker-machine env dev | grep -v \#)"
}
